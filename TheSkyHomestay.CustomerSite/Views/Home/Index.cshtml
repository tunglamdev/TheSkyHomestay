@model HomeViewModel

@*=============Banner============*@
<section class="banner_area">
    <div class="booking_table d_flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h6>Away from the busy life</h6>
                <h2>The Sky Homestay</h2>
                <p>Chúng ta cứ mải miết chạy theo những thứ phù phiếm xa hoa rồi chẳng biết rằng thứ bình yên nhất trong tâm hồn <br /> chính là cái khoảnh khắc được ngắm nhìn bầu trời một mình và đầy hạnh phúc...</p>
                <a asp-controller="rooms" class="genric-btn success circle arrow">Đặt phòng<span class="lnr lnr-arrow-right"></span></a>
            </div>
        </div>
    </div>
</section>

@*============Rooms============*@
<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">Phòng tại nhà Sky</h2>
            <p>Với hệ thống phòng đa dạng, The Sky Homestay mong sẽ đem lại cho bạn trải nghiệm tuyệt vời tại Hòn Sơn</p>
        </div>
        <div class="row mb_30">
            @foreach (var item in Model.RoomCategories)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="accomodation_item text-center">
                        <a asp-controller="rooms" asp-action="category" asp-route-Id="@item.Id">
                            <div class="hotel_img">
                                <img src="@item.Image" alt="">
                                @*<a href="#" class="btn theme_btn button_hover">Đặt ngay</a>*@
                            </div>
                            <h4 class="sec_h4">@item.Name</h4>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@*=============Facilities==============*@
<section class="facilities_area section_gap">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background="">  
    </div>
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_w">Tiện ích tại nhà Sky</h2>
            <p style="color: #fff">Những tiện ích nếu bạn chọn The Sky Homestay đồng hành tại thiên đường Hòn Sơn</p>
        </div>
        <div class="row mb_30">
            <div class="col-lg-4 col-md-6">
                <div class="facilities_item">
                    <h4 class="sec_h4"><i class="lnr lnr-bicycle"></i>Dễ dàng di chuyển</h4>
                    <p>Với vị trí gần cầu cảng, bạn sẽ dễ dàng di chuyển đến những nơi khác trên đảo.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="facilities_item">
                    <h4 class="sec_h4"><i class="lnr lnr-dinner"></i>Hỗ trợ nấu nướng</h4>
                    <p>Homestay có sẵn bếp cho bạn chế biến thức ăn, hỗ trợ nấu nướng cho bạn luôn nhé!</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="facilities_item">
                    <h4 class="sec_h4"><i class="lnr lnr-shirt"></i>Máy giặt tự phục vụ</h4>
                    <p>Sky có máy giặt tự phục vụ, bạn không phải lo về việc giặt phơi quần áo nhé!</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="facilities_item">
                    <h4 class="sec_h4"><i class="lnr lnr-music-note"></i>Thoải mái hát ca</h4>
                    <p>Sky phục vụ loa kẹo kéo cho bạn thoải mái thể hiện giọng hát của mình.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="facilities_item">
                    <h4 class="sec_h4"><i class="lnr lnr-camera"></i>View biển cực đẹp</h4>
                    <p>Bạn sẽ thoải mái check in với view biển từ trên cao cực xịn tại Sky.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="facilities_item">
                    <h4 class="sec_h4"><i class="lnr lnr-coffee-cup"></i>Cafe sân thượng</h4>
                    <p>Sân thượng ban đêm với quán cafe cực chill phục vụ nước uống và các món ăn vặt.</p>
                </div>
            </div>
        </div>
    </div>
</section>

@*==============About==============*@
<section class="about_history_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-md-6 d_flex align-items-center">
                <div class="about_content ">
                    <h2 class="title title_color">Về Sky Homestay <br>Sứ mệnh & Tầm nhìn</h2>
                    <p>The Sky Homestay là một doanh nghiệp kinh doanh nhà nghỉ tại Hòn Sơn. Với sứ mệnh phục vụ và đem đến trải nghiệm tuyệt vời cho du khách tại Hòn Sơn, The Sky Homestay luôn cố gắng thay đổi từng ngày để xứng đáng là một trong những điểm đến đáng quan tâm trong thị trường dịch vụ không khói tại mảnh đất hiền hòa Kiên Giang.</p>
                    <a asp-controller="rooms" class="button_hover theme_btn_two">Đặt phòng ngay</a>
                </div>
            </div>
            <div class="col-md-6">
                <img class="img-fluid" src="~/images/about_bg.jpg" alt="img">
            </div>
        </div>
    </div>
</section>

@*==============Feedback============*@
<section class="testimonial_area section_gap">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background="">  
    </div>
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_w">Feedback từ khách của Sky</h2>
            <p style="color: #fff">Cảm hứng và động lực để nhà Sky nâng cao chất lượng dịch vụ của mình</p>
        </div>
        <div class="testimonial_slider owl-carousel">
            @foreach (var item in Model.Feedbacks)
            {
                <div class="media testimonial_item">
                    <img class="rounded-circle" src="~/images/testtimonial-1.jpg" alt="">
                    <div class="media-body">
                        <p>@item.Comment</p>
                        <h4 class="sec_h4">@item.TouristName</h4>
                        <div class="star">
                            @for (var i = 0; i < @item.Vote; i++)
                            {
                                <i class="fa fa-star"></i>
                            }
                            @for (var i = 0; i < 5 - @item.Vote; i++)
                            {
                                <i class="fa fa-star-o"></i>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        @if(User.Identity.IsAuthenticated){
            <div class="row mt-3">
                <div class="col-lg-9 col-md-9 col-sm-9">
                    <div class="text-center single-footer-widget">
                        <form asp-controller="home" asp-action="addfeedback" method="post" class="subscribe_form relative">
                            <div class="input-group d-flex flex-row">
                                <input style="border: solid 1px white; font-size: 16px; color: white;" type="text" name="comment" placeholder="Chia sẻ cảm nhận của bạn" autocomplete="off">
                                @*<button type="submit" class="btn sub-btn">Đánh giá</button>*@
                                <button type="submit" class="btn sub-btn"><span class="lnr lnr-location"></span></button>
                            </div>
                            <div class="d-flex flex-row add-comment-section mt-2 mb-2 justify-content-right">
                                <p class="mr-3" style="color: white">Bạn đánh giá dịch vụ tại Sky bao nhiêu sao?</p>
                                <div class="star-rating icons align-items-center justify-content-center">
                                    <input type="radio" name="Vote" id="rate-5" value="5">
                                    <label for="rate-5" class="fa fa-star"></label>
                                    <input type="radio" name="Vote" id="rate-4" value="4">
                                    <label for="rate-4" class="fa fa-star"></label>
                                    <input type="radio" name="Vote" id="rate-3" value="3">
                                    <label for="rate-3" class="fa fa-star"></label>
                                    <input type="radio" name="Vote" id="rate-2" value="2">
                                    <label for="rate-2" class="fa fa-star"></label>
                                    <input type="radio" name="Vote" id="rate-1" value="1">
                                    <label for="rate-1" class="fa fa-star"></label>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</section>