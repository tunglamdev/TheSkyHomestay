@model ContactViewModel;
@*Breadcrumb*@
<section class="breadcrumb_area">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Liên hệ</h2>
            <ol class="breadcrumb">
                <li><a href="index.html">Trang chủ</a></li>
                <li class="active">Liên hệ</li>
            </ol>
        </div>
    </div>
</section>

@* Contact *@
<section class="contact_area section_gap">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="contact_info">
                    <div class="info_item">
                        <i class="lnr lnr-home"></i>
                        <h6>123 Ấp Bấc, xã Lại Sơn</h6>
                        <p>Kiên Hải - Kiên Giang</p>
                    </div>
                    <div class="info_item">
                        <i class="lnr lnr-phone-handset"></i>
                        <h6><a href="#">(+84) 123 456 789</a></h6>
                        <p>Số điện thoại</p>
                    </div>
                    <div class="info_item">
                        <i class="lnr lnr-envelope"></i>
                        <h6><a href="#">theskyhomestay@gmail.com</a></h6>
                        <p>Địa chỉ email</p>
                    </div>
                    <div class="info_item">
                        <i class="lnr lnr-thumbs-up"></i>
                        <h6><a href="https://www.facebook.com/profile.php?id=100087894625578" target="_blank">The Sky
                                Homestay - Hòn Sơn</a></h6>
                        <p>Fanpage</p>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <form class="row contact_form" asp-controller="contact" asp-action="index" method="post">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Nhập họ và tên"
                                autocomplete="off">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="Nhập địa chỉ email" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="subject" name="subject"
                                placeholder="Nhập tiêu đề" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea class="form-control" name="content" id="message" rows="1"
                                placeholder="Nhập nội dung" autocomplete="off"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12 d-flex justify-content-">
                        @if (TempData["Message"] != null)
                        {
                            <h5 style="color: green">@TempData["Message"]</h5>
                        }
                        <button type="submit" value="submit" class="btn theme_btn button_hover ml-auto">GỬI LỜI NHẮN</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>