@model RoomsViewModel
@*Breadcrumb*@
<section class="breadcrumb_area">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Phòng</h2>
            <ol class="breadcrumb">
                <li><a asp-controller="home" asp-action="index">Trang chủ</a></li>
                <li class="active">Phòng</li>
            </ol>
        </div>
    </div>
</section>

<section class="shop-detail-box-main section_gap">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-5 col-md-6">
                <div id="carousel-example-1" class="single-product-slider carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        @foreach(var img in @Model.Room.Images){
                            if(Model.Room.Images.First() == img){
                                <div class="carousel-item active"> <img class="d-block w-100" src="@img.Name" alt=""> </div>
                            }
                            else{
                                <div class="carousel-item"> <img class="d-block w-100" src="@img.Name" alt=""> </div>
                            }
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carousel-example-1" role="button" data-slide="prev">
                        <i class="fa fa-angle-left" aria-hidden="true"></i>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-1" role="button" data-slide="next">
                        <i class="fa fa-angle-right" aria-hidden="true"></i>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col-xl-7 col-lg-7 col-md-6">
                <div class="single-product-details">
                    <h2>@Model.Room.Name</h2>
                    <h5>@String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"),"{0:c}",@Model.Room.Price)</h5>
                    <h4>Mô tả phòng:</h4>
                    <p class="text-justify">
                        @Model.Room.Description
                    </p>
                    <a asp-controller="rooms" asp-action="index" class="button_hover theme_btn_two">Đặt ngay</a>
                </div>
            </div>
        </div>
    </div>
</section>